{
  "name": "chichi-website",
  "version": "0.1.0",
  "scripts": {
    "postinstall": "command -v hugo >/dev/null 2>&1 && echo [WARN] Hugo binary is not installed yet!; npm run build:copy",
    "start": "npm run build:clean; npm run build:webpack; concurrently 'npm run watch:webpack' 'npm run watch:hugo'",
    "watch:webpack": "NODE_ENV='development' webpack --config ./.webpack.config --watch",
    "watch:hugo": "HUGO_ENV='development' hugo serve --port 3000 --noHTTPCache",
    "build:webpack": "NODE_ENV='development' webpack --config ./.webpack.config",
    "build:hugo": "HUGO_ENV='development' hugo",
    "build:copy": "mkdir -p ./app/static/script/vendors/ && cp ./node_modules/jquery/dist/jquery.min.js \"$_\"",
    "build:clean": "rm -rf ./dist ./app/static/style ./app/static/script/*.js* ./app/layouts/partials/svgs",
    "build": "npm run build:clean; npm run build:webpack; npm run build:hugo",
    "build:prod": "npm run build:clean; NODE_ENV='production' webpack --config ./.webpack.config; HUGO_ENV='production' hugo --baseURL http://beta.chichi.berlin/"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "jquery": "1.x"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.2",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.3.1",
    "eslint": "^4.13.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "import-glob-loader": "^1.1.0",
    "node-sass": "^4.7.2",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.6",
    "svgo": "^1.0.3",
    "webpack": "^3.10.0"
  },
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=5.5.0"
  }
}
